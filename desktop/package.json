{
  "name": "posture-menubar",
  "version": "1.0.0",
  "description": "macOS menu bar app for posture monitoring",
  "main": "main.js",
  "scripts": {
    "dev": "tsc && electron .",
    "start": "electron .",
    "build": "tsc && electron-builder --mac",
    "dist": "electron-builder",
    "compile": "tsc",
    "watch": "tsc --watch"
  },
  "keywords": ["electron", "menubar", "posture", "macos"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "menubar": "^9.5.0",
    "@mediapipe/pose": "^0.5.1635989137",
    "@mediapipe/camera_utils": "^0.3.1632432234"
  },
  "devDependencies": {
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0"
  },
  "build": {
    "appId": "com.posture.menubar",
    "productName": "Posture Monitor",
    "mac": {
      "category": "public.app-category.healthcare-fitness",
      "target": ["dmg"],
      "icon": "assets/icon.png"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "preload.js",
      "assets/**/*",
      "node_modules/**/*"
    ]
  }
}
