{
  "expo": {
    "name": "Mobility Journey",
    "slug": "mobility-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mobilityapp",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "ios": {
      "bundleIdentifier": "com.mandel.mobilityjourney",
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Mobility Journey to access your camera for progress photos.",
        "NSMotionUsageDescription": "Mobility Journey uses AirPods motion to track your posture",
        "NSPhotoLibraryUsageDescription": "Allow Mobility Journey to access your photo library for progress photos.",
        "NSPhotoLibraryAddUsageDescription": "Allow Mobility Journey to save photos to your library.",
        "NSHealthShareUsageDescription": "Mobility Journey reads your health data (sleep, HRV, heart rate, steps) to personalize your corrective exercise plans and track recovery.",
        "NSHealthUpdateUsageDescription": "Mobility Journey can save your workout data to Apple Health.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "entitlements": {
        "com.apple.developer.healthkit": true,
        "com.apple.developer.healthkit.access": [
          "health-records",
          "health-records"
        ]
      },
      "backgroundColor": "#0b1020"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.mandel.mobilityjourney"
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-image-picker",
      "expo-dev-client"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "owner": "mandelmobility",
    "extra": {
      "router": {},
      "eas": {
        "projectId": "45355df7-1774-4813-a8f0-26dbf410bc1c"
      }
    }
  }
}
